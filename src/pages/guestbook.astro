const messages = await getAllMessages()

---

<Layout title="Guestbook">
  <div class="flex flex-col">
    <PageTitle title="Guestbook" />
    <PageSubtitle
      content="Leave a comment below. It could be anything â€“ appreciation, information, wisdom, or even humor. Surprise me!" />
    <Banner />
    <div class="pt-4 pb-16">
